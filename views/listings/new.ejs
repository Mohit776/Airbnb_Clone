<% layout('layouts/boilerplate.ejs') %>
<body>
  <div class="container-new mt-5">
    <h3 class="mb-4">Create New Listing</h3>
    <form action="/listings" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <input type="text" class="form-control" placeholder="Title" name="listing[title] "required  />
        <div class="invalid-feedback">
          Please choose a Title
        </div>
      </div>
      <div class="mb-3">
        <textarea class="form-control" placeholder="Description" name="listing[description]"required ></textarea>
        <div class="invalid-feedback">
          Please choose a Valid Description
        </div>
      </div>
      <div class="mb-3">
        <input type="text" class="form-control" placeholder="Image URL" name="listing[image]"  />
        
      </div>
      <div class="mb-3">
        <input class="form-control" placeholder="Price" name="listing[price]"required  />
        <div class="invalid-feedback">
          Please choose a Valid Price
        </div>
      </div>
      <div class="mb-3">
        <input type="text" class="form-control" placeholder="Location" name="listing[location]"required  />
        <div class="invalid-feedback">
          Please choose a Valid Location
        </div>
      </div>
      <div class="mb-3">
        <input type="text" class="form-control" placeholder="Country" name="listing[country]"required  />
        <div class="invalid-feedback">
          Please choose a Country 
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

  
</body>

