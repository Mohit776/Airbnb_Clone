<% layout('layouts/boilerplate.ejs') %>
<body>
  <div class="container mt-5">
    <h3 class="mb-4">Create New Listing</h3>
    <form action="/listings" method="post">
      <div class="mb-3">
        <input type="text" class="form-control" placeholder="Title" name="listing[title]" />
      </div>
      <div class="mb-3">
        <textarea class="form-control" placeholder="Description" name="listing[description]"></textarea>
      </div>
      <div class="mb-3">
        <input type="text" class="form-control" placeholder="Image URL" name="listing[image]" />
      </div>
      <div class="mb-3">
        <input type="number" class="form-control" placeholder="Price" name="listing[price]" />
      </div>
      <div class="mb-3">
        <input type="text" class="form-control" placeholder="Location" name="listing[location]" />
      </div>
      <div class="mb-3">
        <input type="text" class="form-control" placeholder="Country" name="listing[country]" />
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

  
</body>

