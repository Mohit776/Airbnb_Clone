<% layout('layouts/boilerplate.ejs') %>

<body>
  <main>
    <h2 class="text-center my-4">All Listings</h2>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
      <% for (let listing of allListings) { %>
      <div class="col">
        <div class="card">
          <img src="<%= listing.image %>" class="card-img-top" alt="Listing Image" />
          <div class="card-body">
            <h5 class="card-title"><%= listing.title %></h5>
            <p class="card-price">â‚¹<%= listing.price %>/Per Night</p>
            <a href="/listings/<%= listing._id %>" class="btn btn-primary">Show More</a>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </main>
</body>